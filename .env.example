# SkillSwap MVP Environment Variables
# This is an example file. Copy to .env.local and fill in the values.

# Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_VERCEL_ENV=development # development, preview, or production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Authentication
AUTH_SECRET=your-auth-secret # A secret key for NextAuth.js
JWT_SECRET=your-jwt-secret # A secret key for JWT encoding/decoding
NEXTAUTH_URL=http://localhost:3000 # Required for NextAuth.js

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_RATINGS=true
NEXT_PUBLIC_ENABLE_MESSAGING=true
NEXT_PUBLIC_ENABLE_REALTIME=false # Set to false to reduce Supabase egress usage

# Maintenance Mode
NEXT_PUBLIC_MAINTENANCE_MODE=false # Set to 'true' to enable maintenance mode
NEXT_PUBLIC_MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance to improve your experience.
NEXT_PUBLIC_MAINTENANCE_END_TIME=April 30, 2025 16:00 UTC

# Error Tracking and Monitoring
SENTRY_DSN=https://your-sentry-dsn@your-sentry-instance.ingest.sentry.io/project-id
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Sentry Source Map Upload (CI/CD only)
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_PROJECT=your-sentry-project-name
SENTRY_ORG=your-sentry-org-name

# New Relic (Optional)
NEW_RELIC_ACCOUNT_ID=your-new-relic-account-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Datadog (Optional)
NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=your-datadog-client-token
NEXT_PUBLIC_DATADOG_APPLICATION_ID=your-datadog-application-id
DATADOG_API_KEY=your-datadog-api-key

# Cross-Origin Resource Sharing
ALLOWED_ORIGINS=http://localhost:3000,https://staging.skillswap.app,https://skillswap.app
COOKIE_DOMAIN=localhost # For cross-subdomain auth

# Email Service (Optional)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email-server-user
EMAIL_SERVER_PASSWORD=your-email-server-password
EMAIL_FROM=noreply@skillswap.app
